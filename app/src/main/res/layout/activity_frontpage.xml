<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Toolbar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarView"
            android:background="#1277e3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButtonMenuIcon"

                    android:layout_alignParentLeft="true"
                    android:background="#1277e3" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButtonSearch"

                    android:layout_alignParentRight="true"
                    android:background="#1277e3" />
            </RelativeLayout>


        </Toolbar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbarView"
        android:id="@+id/linearLayout">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_below="@+id/toolbarView"
            android:fillViewport="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal"
                    android:text="genstands nr" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/EditTextItemNr"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Betegnelse"
                    android:id="@+id/textView1"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextBetegnelse"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ModtagelsesDato"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/EditTextRecieveDate"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Datering fra"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextDatingFrom"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.06" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Datering til"
                    android:id="@+id/textView4"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextDatingTo"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Beskrivelse"
                    android:id="@+id/textView5"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextDescription"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Ref. til Donator"
                    android:id="@+id/textView6"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextRef.Donator"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Ref. til producent"
                    android:id="@+id/textView7"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextRef.Producer"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Geografisk omrÃ¥de"
                    android:id="@+id/textView8"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextGeoArea"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="item subjects"
                    android:id="@+id/textView9"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextItemSubjects"
                    android:layout_gravity="center_horizontal"/>

                <Toolbar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toolbarViewBottom"
                    android:background="#1277e3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageButtonCamerafolder"
                            android:src="@drawable/ic_camerafolder"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"

                            android:background="#1277e3" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageButtonCamera"
                            android:src="@mipmap/cameraicon"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"

                            android:background="#1277e3" />


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageButtonDone"
                            android:src="@drawable/ic_done"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"

                            android:background="#1277e3" />



                    </RelativeLayout>


                     </Toolbar>
            </LinearLayout>

        </ScrollView>



    </LinearLayout>




</RelativeLayout>
