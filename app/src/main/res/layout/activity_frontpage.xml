<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- android:layout_below="@id/toolbarView" -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1277e3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageButtonSearch"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:layout_centerVertical="true"
                android:background="#1277e3"
                android:clickable="true"
                android:src="@drawable/ic_search"
                android:layout_weight="0" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>

            <TextView
                android:id="@+id/imageButtonCancel"
                android:background="#1277e3"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:text="CLEAR"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_weight="0" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:fillViewport="false">
            <!-- android:layout_below="@+id/toolbarView" -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Overskrift"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/EditTextItemHeadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Beskrivelse"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/editTextBeskrivelse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05"
                    android:text="ModtagelsesDato"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/EditTextRecieveDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05"
                    android:text="Datering fra"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/editTextDatingFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:focusable="false"
                    android:layout_weight="0.06" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05"
                    android:text="Datering til"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/editTextDatingTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05" />


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Ref. til Donator"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/editTextRef.Donator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Ref. til producent"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/editTextRef.Producer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Geografisk område"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/editTextGeoArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/mygallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        />
                </HorizontalScrollView>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>
    <!-- VI skal kigge på at fjerne toolbars/ gøre dem compatible med tidligere versioner af android.-->
    <Toolbar
        android:id="@+id/toolbarViewBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#1277e3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageButtonCamerafolder"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:background="#1277e3"
                android:clickable="true"
                android:src="@mipmap/ic_photo_library" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageButtonRecorder"
                    android:src="@mipmap/microphoneicon"
                    android:background="#1277e3"
                    android:layout_weight="0.5" />

            </LinearLayout>


            <ImageView
                android:id="@+id/imageButtonCamera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:gravity="center_vertical|center_horizontal"
                android:src="@mipmap/ic_photo_camera"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/photoThumb"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:theme="@style/myImageView" />

                <ImageView
                    android:id="@+id/photoThumb2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_toEndOf="@id/photoThumb2"
                    android:layout_weight="1"
                    android:theme="@style/myImageView" />

                <ImageView
                    android:id="@+id/photoThumb3"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_toEndOf="@id/photoThumb3"
                    android:layout_weight="1"
                    android:theme="@style/myImageView" />

            </LinearLayout>


            <ImageView
                android:id="@+id/imageButtonDone"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#1277e3"
                android:clickable="true"
                android:src="@mipmap/ic_save" />


        </LinearLayout>

    </Toolbar>


</RelativeLayout>
